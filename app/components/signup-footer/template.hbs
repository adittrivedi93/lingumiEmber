<div class="signup_footer">
	<h4><strong>{{_ "Buy the Learning Cubes:" }}</strong></h4>
	<h4>{{_ "Buy the cubes today for <strike>£49.99</strike> <strong>£39.99" }}</strong></h4>
	{{#link-to 'checkout' class="btn btn-cyan"}}{{_ "Buy" }}{{/link-to}}
	<button class="footer_close btn btn-white">{{_ "Close" }}</button>
</div>


<script type="text/javascript">
	$(window).scroll(function() {
    var footer = $('.signup_footer');
    var top = 1000;
    if ($(window).scrollTop() >= top) {
        footer.addClass('navbar-fixed-bottom');
    } 
    	else {
        footer.removeClass('navbar-fixed-bottom');
    }
	});
	$('.footer_close').click(function() { 
	    $('.signup_footer').toggle();
	});
</script>