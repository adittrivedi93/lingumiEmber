<div class="form" id="login_form">
	<form {{action 'loginUser' on='submit'}} class="form-inline">
		<h2>Sign In</h2>

		<div id="form-sections">
			<div class="form-group">
					<label>Email:</label>
				{{input value = username type="email" class="input form-control input-lg" id="login_email_input" placeholder="Email"}}
			</div>

			<div class="form-group">
				<label>Password:</label>
				{{input value = password class="input form-control input-lg" id="login_pword_input" type = "password" placeholder ="password" }}
				<!-- {{get password "length"}} -->
			</div>
		</div>

<!-- 		<p> {{passwordStrength}} </p> -->
		<div class="row" id="buttons-lineone">
			<button type="submit" class="btn btn-cyan btn-login">Login</button>
		</div>
		<div class="row" id="buttons-linetwo">
			<button class="btn-discrete">{{#link-to 'registerAccount'}}Sign Up{{/link-to}}</button>
			<button class="btn-discrete">{{#link-to 'forgottenPassword'}}Forgotten Password{{/link-to}}</button>
		</div>
	</form>
</div>
