<div class="form" id="reg_form">
	<form {{action 'registrationComplete' on='submit'}} class="form-inline">
		<div class="row">
			<h2>{{title}} </h2>
			<div id="form-sections">
				<div class="form-group">
						<label>{{_ "Email:" }}</label>
					{{input value = email type="email" class="input form-control input-lg" id="reg_email_input" placeholder="Email"}}
				</div>

				<div class="form-group">
					<label>{{_ "Password:" }}</label>
					{{input value = password class="input form-control input-lg" id="reg_pword_input" type = "password" placeholder ="password" }}
					<!-- {{get password "length"}} -->
				</div>

				<div class="form-group">
					<label>{{_ "Repeat Password:" }}</label>
					{{input value = repeatPassword class="input form-control input-lg" id="reg_pword_input2" type = "password" placeholder ="password" }}
				</div>
			</div>

	<!-- 		<p> {{passwordStrength}} </p> -->
			<button type="submit" class="btn btn-cyan btn-register">{{_ "Register" }}</button>
		</div>
		{{!-- <div class="row">{{#reg-info}}{{/reg-info}}</div> --}}
	</form>

</div>