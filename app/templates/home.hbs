<div class="page_content">
	<div class="top">
		<div id="video">
			<script charset="ISO-8859-1" src="//fast.wistia.com/assets/external/E-v1.js" async></script>
			<div>
				<div class="wistia_responsive_wrapper" style="height:450px;width:100%;">
					<span class="wistia_embed wistia_async_ld5ha7yp8j popover=true videoFoam=true" style="display:inline-block;height:100%;width:100%;margin-top:2%">&nbsp;</span>
				</div>
			</div>
		</div>

		<div class="strapline row">
			<div id="language_labels" class="col-xs-3">
				<img src="assets/language_labels.gif">
			</div>
			<div class="col-xs-6">
				<h2>
				<!-- translation: The interactive way to learn English for kids -->
                    {{t "home.strapline"}}
				</h2>

				{{#scroll-to href='#explainers' label='explainers' offset=-60 class="btn btn-cyan"}}
					{{t "home.btn.what"}}
				{{/scroll-to}}
			</div>
			<div id="age_label" class="col-xs-3">
				<img src="assets/age_label2.gif">
			</div>
		</div>
	</div>

	<div class="explainers well_padded" id="explainers">
			<div id="top_kit">
				<img src="assets/starter_kit.png">
			</div>
			<div id="top_kit_exp">
				<h2>
					<!-- translation: A fun, interactive way for kids to learn English -->
					{{t "home.product.header"}}
				</h2>
				<h4>
					{{t "home.product.description"}}
				</h4>
				<h4>
				<!-- translation: Learn over 100 words and phrases from our free apps, with no in-app purchases. The kit costs 55 euros including delivery to Italy. -->
					{{t "home.product.detail"}}
				</h4>

			</div>
		<div class="action">
			{{#link-to 'products' class="btn btn-navbar btn-white"}}
				{{t "home.product.btn.cubes"}}
			{{/link-to}}
			{{#scroll-to href='#story' label='story' offset=-60 class="btn btn-magenta"}}
				{{t "home.product.btn.story"}}
			{{/scroll-to}}
		</div>
	</div>


	<div id="story">
		<h2>
			{{t "home.story.header"}}
		</h2>

		<div class="row story_row very_well_padded">
			<div class="col-sm-3">
				<img src="assets/story_image_1.png">
			</div>
			<div class="col-sm-9">
				<p>{{t "home.story.subsection.what"}}</p>
			</div>
		</div>

		<div class="row story_row very_well_padded">
			<div class="col-sm-3">
				<img src="assets/story_image_2.png">
			</div>
			<div class="col-sm-9">
				<p>{{t "home.story.subsection.how"}}</p>
			</div>
		</div>

		<div class="row story_row very_well_padded">
			<div class="col-sm-3">
				<img src="assets/story_image_3.png">
			</div>
			<div class="col-sm-9">
				<p>{{t "home.story.subsection.why"}}</p>
			</div>
		</div>

		<div class="row story_row very_well_padded">
			<div class="col-sm-3">
				<img src="assets/story_image_4.png">
			</div>
			<div class="col-sm-9">
				<p>{{t "home.story.subsection.who"}}</p>
			</div>
		</div>
	</div>


	<div class="centered">
		{{#scroll-to href='#testimonials' label='testimonials' offset=-60 class="btn btn-magenta"}}
					{{t "home.story.btn.testimonials"}}
		{{/scroll-to}}
	</div>

	<div class="row banner well_padded" id="testimonials">

		<div class="col-sm-3" id="testimonials_img">
			<img src="assets/stories/tasha_olivia.png">
		</div>
		<div class="col-sm-9">
			<h4>{{t "home.testimonials.text"}}</h4>
			<p>{{t "home.testimonials.attribution"}}</p>
		</div>
		{{#link-to 'story' class="float_right btn btn-cyan"}}{{t "home.testimonials.btn.story"}}{{/link-to}}
	</div>

	<div class="row" id="benefits">
		<div class="col-md-4">
			<img src="assets/story_image_1.png">
			<h2>{{t "home.benefits.physical.header"}}</h2>
			<h4>{{t "home.benefits.physical.text"}}</h4>
		</div>

		<div class="col-md-4">
			<img src="assets/story_image_2.png">
			<h2>{{t "home.benefits.shared.header"}}</h2>
			<h4>{{t "home.benefits.shared.text"}}</h4>
		</div>

		<div class="col-md-4">
			<img src="assets/playful_icon.png">
			<h2>{{t "home.benefits.playful.header"}}</h2>
			<h4>{{t "home.benefits.playful.text"}}</h4>
		</div>
	</div>

{{!-- 	Add an awesome for parents (game view vs feedback) chunk here --}}

	<div class="quite_padded" id="signup_bottom">

		 <div class="landing_buy">
		 <h4>{{t "home.buy.header"}}</h4>
		 	{{#link-to 'checkout' class="btn btn-navbar btn-magenta"}}{{t "home.buy.btn.buy"}}{{/link-to}}
		 </div>
	</div>
	{{#signup-footer}}{{/signup-footer}}
</div>
